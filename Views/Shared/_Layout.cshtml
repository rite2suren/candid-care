<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>        
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css" asp-append-version="true" />    
    <style>
        .jumbotron {
            background-color: #FF7F50; /* Orange */
            color: #ffffff;
        }

        /* Add a gray background color and some padding to the footer */
        footer {
        background-color: #f2f2f2;
        padding: 25px;
        }

        .jumbotron p 
        {
            font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
            font-size: 14px;
            background-color: #836f68; /* Orange */
            color: #ffffff;
        }
    </style>   
</head>
<body>
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="nav-link text-dark" asp-area="" asp-controller="MentalHealth" asp-action="Index">
                        <img src="~/images/candidcare-logo-small-70.png" class="img-rounded" alt="CandidCare"/>                
                    </a>
                </div>
                <ul class="nav navbar-nav">                
                <li><a class="nav-link text-dark" asp-area="" asp-controller="MentalHealth" asp-action="Index">Mental Health</a></li>
                <li><a class="nav-link text-dark" href="https://sites.google.com/view/suitup2uorg/home" target="_blank">Sexual Health</a></li>
                <li><a class="nav-link text-dark" href="https://988lifeline.org/" target="_blank">988 Suicide & Crisis Lifeline</a></li>
                <li><a class="nav-link text-dark" href="https://www.samhsa.gov/find-help/national-helpline" target="_blank">National Hotline</a></li>
                </ul>                
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - CandidCare
        </div>
    </footer>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>     
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>    
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
